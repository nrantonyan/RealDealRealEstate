<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">
    <div class="row">
    </div>
    <header class="header">
        <img src="/assets/images/IMG_0496.PNG" class="header-logo">
    </header>

    {{> nav }}

    <br>
    <div class="container">

        <h2>Costs and Fees</h2>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label for="projectRepair">Estimated Cost of Repairs</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="text" class="form-control" id="repairCosts" name="repairCosts" required aria-label="Amount (to the nearest dollar)">
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="projectBclosing">Buyer's Closing Cost</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="text" class="form-control" id="bcc" name="bcc" required aria-label="Amount (to the nearest dollar)">
                </div>
            </div>

            <div class="form-group col-md-2">
                <label for="projectSclosing">Seller's Closing Cost</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="text" class="form-control" id="scc" name="scc" required aria-label="Amount (to the nearest dollar)">
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="projectRealtorFee">Realtor Fees</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="realitorFees" name="realitorFees" required aria-label="">
                    <div class="input-group-append">
                        <span class="input-group-text">%</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-2">
                <label for="projectMonthlyHolding">Monthly Holding Cost</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="text" class="form-control" id="monthlyHold" name="monthlyHold" required aria-label="Amount (to the nearest dollar)">
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label for="projectDays">Days to Rehab and Sell</label>
                <input type="text" name="" id="daysRehab" name="daysRehab" class="form-control" required placeholder="Enter your best approximation"
                    aria-describedby="helpId">
            </div>
        </div>

        <input type="submit" id="next3" onclick="window.location = '/project/results'" value="Next">

    </div>

<br>

    {{> footer}}